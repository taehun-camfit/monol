{
  "name": "monol-rulebook",
  "version": "0.1.0",
  "description": "로컬 규칙을 Cursor/Claude Code에 동기화하는 CLI 도구",
  "type": "module",
  "main": "dist/foundations/logic/lib/index.js",
  "types": "dist/foundations/logic/lib/index.d.ts",
  "bin": {
    "monol-rulebook": "dist/bin/sync.js"
  },
  "files": [
    "dist",
    "rules"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "typecheck": "tsc --noEmit",
    "sync": "node dist/bin/sync.js all",
    "sync:cursor": "node dist/bin/sync.js cursor",
    "sync:claude": "node dist/bin/sync.js claude"
  },
  "keywords": [
    "claude-code",
    "plugin",
    "rulebook",
    "code-rules"
  ],
  "author": "Kent",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "yaml": "^2.3.0"
  }
}
