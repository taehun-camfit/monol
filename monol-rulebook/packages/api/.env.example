# ============================================================================
# Monol Rulebook API - Environment Variables
# ============================================================================

# Server
NODE_ENV=development
PORT=3030

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/monol_rulebook?schema=public"

# JWT Secrets
JWT_SECRET=your-jwt-secret-key-min-32-chars-long
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-min-32-chars-long

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT=100

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
API_URL=http://localhost:3030

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
